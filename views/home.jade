extends basic

block content

    .row
        .col-md-4.col-md-offset-4
            .sign-container
                h3 Войти в личный кабинет
                form(method='post' action='/signin')
                    .form-group
                        label(for="email") Логин
                        input.form-control(name="login" type="email" id="email" placeholder="Введите свой email адрес")
                    .form-group
                        label(for="password") Пароль
                        input.form-control(name="password" type="password" id="password" placeholder="Введите пароль")
                    button.btn.btn-primary.signin(type="button") Войти